<script>
function updatePrice()	{
	var price = 500;
	var quantity = document.getElementById("quantity");
	var delivery1 = document.getElementById("delivery1");
	var delivery2 = document.getElementById("delivery2");
	var delivery3 = document.getElementById("delivery3");
	var totalDialogBox = document.getElementById("total");

	var total = quantity.value * price;

	if(delivery1.checked) total += 5.99;
	if(delivery2.checked) total += 7.99;
	if(delivery3.checked) total += 99.99;
	
	total = total*1.13;
	totalDialogBox.innerHTML = "Purchase Total: " +total;

}
</script>


